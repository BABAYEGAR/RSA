@using ARM.Models.Enum
@using Microsoft.AspNetCore.Http
@using Opmas.Models.Enum
@model ARM.Models.Application.CustomerData
@{
    ViewBag.Title = "Customer Information";
    Layout = "_Layout";
}
@section Css
    {
    <link href="~/datepicker/css/datepicker.css" rel="stylesheet" />
}

<style>
    .about_slider-area {
        height: 280px !important;
    }

    .contact-us-section {
        padding-top: 0px !important
    }
</style>
<div class="about_slider-area pt-90">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="slider-text-2 text-center pt-40">
                    <h4 style="color: white">To see your result please provide us with the following information <br/>- full name, email and mobile number!</h4>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="contact-us-section pb-30">
    <div class="container">
        <div class="form-box clearfix">
            @using (Html.BeginForm("SignUp", "Home", FormMethod.Post, new { @class = "shake scroll-reveal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label" })<span class="required">*</span>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your full name" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Email, new { @class = "control-label" })<span class="required">*</span>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your email address" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.PhoneNumber, new { @class = "control-label" })<span class="required">*</span>
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your phone number" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>


                <div class="form-group col-md-12">
                    <button type="submit" class="btn btn-purple waves-effect waves-light pull-right">See Result</button>
                    <a href="@Url.Action("RiskAppetite")" class="btn btn-purple waves-effect waves-light pull-right">Back</a>
                </div>
            }
        </div>
    </div>
</section>
@section Script
    {

    <script src="~/datepicker/js/bootstrap-datepicker.js"></script>
    <script>
        $('.datepicker').datepicker({
            endDate: new Date()
        });
    </script>
}
